<!--Form to comment a post-->
<section class="container">
    <div class="row justify-content-center ">
        <div class="col-12 col-lg-10 bg-dark text-white rounded-top p-3">
            <h3 class="">Comment</h3>
        </div>
        <div class="col-12 col-lg-10 p-3 rounded-bottom border border-secundary shadow-sm">
            <div class="row justify-content-center">
                <div class="col-12 col-md-7">
                    <form action="/api/posts/create-post" method="POST">
                        <div class="mb-3">
                            <label class="form-label fs-5" for="text">Comment</label>
                            <textarea class="form-control border border-dark" type="text" name="post_content"
                                id="postContent"></textarea>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" class="btn btn-outline-dark" value="Leave Comment" id="btnCreatePost">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>