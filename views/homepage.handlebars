<!--Homepage-->
{{#each userPosts as |post|}}
<section class="row m-3" id="posts"></section>
    <article class="col">

        <div class="row card border rounded border-2 p-3">
            <h5 class=" col-12 card-header fs-3 fw-bold text-dark">{{post.post_title}}</h5>
            <div class="col-12 card-body">
                <p class="card-text fs-4">{{post.post_content}}</p>
            </div>
            <blockquote class="col-12 author  blockquote text-muted fst-italic fs-6 p-3 mt-5 border-top border-1">
                Posted By {{post.user.username}} On <span>{{post.createdAt}}</span>
            </blockquote>

            
            <!--Buttonscontainer-->
            <div class="row justify-content-start p-2">
                 <!--Button to add a comment in a post-->
                <div class="col-6 col-md-2">
                    <div class="d-flex justify-content-center">
                        <a href="/api/comments/comment-form/{{post.id}}" class="btn btn-outline-secondary">Add Comment</a>
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div class="d-flex justify-content-center">
                        <a href="/api/comments/usersComments/{{post.id}}" class="btn btn-outline-secondary">View comments</a>
                    </div>
                </div>
            </div>
        
            {{#if loggedIn}}
            {{/if}}
        </div>
    </article>
</section>
{{/each}}