      <section class="container">
                <div class="row justify-content-center ">
                    <div class="col-12 col-lg-10 bg-success text-white rounded-top p-3">
                        <h3 class="">Login</h3>
                    </div>
                    <div class="col-12 col-lg-10 p-3 rounded-bottom border border-secundary shadow-sm">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-7">
                                <form action="/api/users/login" method="POST">
                                    <div class="mb-3">
                                        <label class="form-label fs-5" for="username">Username</label>
                                        <input class="form-control border  border-dark" name="username" type="text" id="LoginUsername">
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label fs-5" for="Password">Password</label>
                                        <input class="form-control border  border-dark" name="password" type="password" id="LoginPassword">
                                    </div>

                                    <div class="mb-3 d-grid">
                                       <input type="submit" value="Login" class="btn btn-outline-success" >
                                    </div>

                                    <div class="text-danger">
                                        <span>{{error}}</span>
                                    </div>

                                    <div class="mb3 d-grid">
                                        <a class="link link-danger fs-5 text-decoration-none" href="/api/users/singup">Sing Up!</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>        